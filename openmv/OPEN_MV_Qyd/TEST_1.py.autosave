import sensor
import time

sensor.reset()
sensor.set_pixformat(sensor.RGB565)
sensor.set_framesize(sensor.QVGA)
sensor.skip_frames(time=2000)

red_threshold = [(11, 57, 29, 57, -32, 20)]

clock = time.clock()

ROI = (0,0,100,100)

while True:
    clock.tick()
    img = sensor.snapshot()
    statistics = img.get_statistics(roi = ROI)
    bolbs = img.find_blobs(red_threshold,pixels_threshold=1000)
    for bolb in bolbs:
        img.draw_rectangle(bolb.rect())
    img.draw_rectangle(ROI)
    print(clock.fps(),bolb.rotation_deg())











